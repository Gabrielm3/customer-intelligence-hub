{
  "mcpServers": {
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "${DATABASE_URL}"
      ],
      "transport": "stdio"
    },
    "marketing": {
      "command": "python",
      "args": [
        "src/crm_agent/mcp_servers/servers/marketing_server.py"
      ],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      },
      "transport": "stdio"
    },
    "slack": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-slack"
      ],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      },
      "transport": "stdio"
    }
  }
}